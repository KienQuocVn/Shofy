@page
@model Shofy.Pages.Accounts.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="content-wrapper full-page-wrapper d-flex align-items-center auth login-bg">
    <div class="card col-lg-4 mx-auto">
        <div class="card-body px-5 py-5">
            <h3 class="card-title text-left mb-3 text-dark">Forgot Password</h3>
            @if (!string.IsNullOrEmpty(Model.SuccessMessage))
            {
                <div class="alert alert-success mt-2 text-center">@Model.SuccessMessage</div>
            }
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger mt-2 text-center">@Model.ErrorMessage</div>
            }
            <form method="post" asp-page-handler="RequestReset">
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label asp-for="Email" class="form-label text-dark">Email</label>
                    <input type="email" class="form-control" asp-for="Email" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-block enter-btn">Send Reset Code</button>
                </div>
            </form>
            <p class="text-center text-dark mt-3"><a href="/Accounts/Login">Back to Login</a></p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}