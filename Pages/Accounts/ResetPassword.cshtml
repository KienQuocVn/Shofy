@page
@model Shofy.Pages.Accounts.ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}

<div class="content-wrapper full-page-wrapper d-flex align-items-center auth login-bg">
    <div class="card col-lg-4 mx-auto">
        <div class="card-body px-5 py-5">
            <h3 class="card-title text-left mb-3 text-dark">Reset Password</h3>
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger mt-2 text-center">@Model.ErrorMessage</div>
            }
            <form method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Email" />
                <div class="form-group">
                    <label asp-for="ResetCode" class="form-label text-dark">Reset Code</label>
                    <input type="text" class="form-control" asp-for="ResetCode" required />
                    <span asp-validation-for="ResetCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NewPassword" class="form-label text-dark">New Password</label>
                    <input type="password" class="form-control" asp-for="NewPassword" required />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-block enter-btn">Reset Password</button>
                </div>
            </form>
            <p class="text-center text-dark mt-3"><a href="/Accounts/ForgotPassword">Request a new code</a></p>
            <p class="text-center text-dark mt-1"><a href="/Accounts/Login">Back to Login</a></p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}