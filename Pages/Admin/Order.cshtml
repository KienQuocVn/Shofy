@page
@model Shofy.Pages.Admin.OrderIndexModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Order Management";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-12 text-center">
            <h2 class="mb-4">Quản lý Đơn hàng</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Danh mục</h5>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" href="/Admin/Index">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/User">User</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/Products">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="/Admin/Order">Order</a>
                        </li>
                        
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-md-9">
            <!-- Thanh tìm kiếm và dropdown Category -->
            <div class="row mb-4 align-items-end">
                <!-- Ô tìm kiếm nhỏ hơn và nằm bên trái -->
                <div class="col-md-6">
                    <form method="get">
                        <div class="input-group">
                            <input type="text" name="searchTerm" value="@Model.Search" class="form-control"
                                placeholder="Tìm theo tên..." />
                            <button class="btn btn-outline-secondary" type="submit">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </form>
                </div>

                <!-- Dropdown Category bên phải -->
                <div class="col-md-4">
                    <select class="form-select" name="category" style="height: 35px;" aria-label="Chọn danh mục">
                        <option selected>-- Category --</option>
                        <option value="1">#</option>
                        <option value="2">#</option>
                        <option value="3">#</option>
                    </select>
                </div>
            </div>

            <!-- Bảng đơn hàng -->
            <div class="table-responsive">
                <table class="table table-striped table-bordered rounded">
                    <thead class="table-light text-center">
                        <tr>
                            <th>ID</th>
                            <th>UserID</th>
                            <th>Total</th>
                            <th>Payment Method</th>
                            <th>Status</th>
                            <th>Order Date</th>
                            <th>Actions</th>
                        </tr>

                    </thead>
                    <tbody>
                        @if (Model.Orders.Count == 0)
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted">Không tìm thấy đơn hàng nào.</td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var order in Model.Orders)
                            {
                                <tr>
                                    <td class="text-center">@order.OrderID</td>
                                    <td>@order.User?.FullName</td>
                                    <td class="text-success fw-bold">$@order.TotalPrice</td>
                                    <td>@order.PaymentMethod</td>
                                    <td><span class="badge bg-info text-dark">@order.Status</span></td>
                                    <td>@order.OrderedDate.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        <div class="dropdown">
                                            <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button"
                                                id="actionMenu@order.OrderID" data-bs-toggle="dropdown" aria-expanded="false">
                                                ...
                                            </button>
                                            <ul class="dropdown-menu" aria-labelledby="actionMenu@order.OrderID">
                                                <li>
                                                    <a class="dropdown-item" asp-page="OrderDetails"
                                                        asp-route-id="@order.OrderID">Chi tiết</a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item" asp-page="OrderEdit"
                                                        asp-route-id="@order.OrderID">Sửa</a>
                                                </li>
                                                <li>
                                                    <form method="post" asp-page-handler="Delete" asp-route-id="@order.OrderID"
                                                        onsubmit="return confirm('Bạn có chắc chắn muốn xóa đơn hàng này không?');">
                                                        <button type="submit" class="dropdown-item text-danger">Xóa</button>
                                                    </form>
                                                </li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Cài đặt Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<!-- Bootstrap JS (đảm bảo có trong _Layout.cshtml nếu chưa) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

