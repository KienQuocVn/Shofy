@page
@model Shofy.Pages.Client.ProductDetailModel
@{
    ViewData["Title"] = Model.Product?.Name ?? "Chi tiết sản phẩm";
}

<!-- Product Detail -->
<div class="container bg0 p-t-60 p-b-140">
    @if (Model.Product == null)
    {
        <div class="alert alert-danger text-center">
            No products found.
        </div>
    }
    else
    {
        <div class="row">
            <!-- Product Images -->
            <div class="col-md-6 col-lg-7 p-b-30">
                <div class="p-l-25 p-r-30 p-lr-0-lg">
                    <div class="wrap-slick3 flex-sb flex-w">
                        <div class="wrap-slick3-dots"></div>
                        <div class="wrap-slick3-arrows flex-sb-m flex-w"></div>
                        <div class="slick3 gallery-lb">
                            <!-- Main Image -->
                            <div class="item-slick3" data-thumb="@Model.Product.ImagePath">
                                <div class="wrap-pic-w pos-relative">
                                    <img src="@Model.Product.ImagePath" alt="@Model.Product.Name">
                                    <a class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04" href="@Model.Product.ImagePath">
                                        <i class="fa fa-expand"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Product Info -->
            <div class="col-md-6 col-lg-5 p-b-30">
                <div class="p-r-50 p-t-5 p-lr-0-lg">
                    <h4 class="mtext-105 cl2 js-name-detail p-b-14">
                        @Model.Product.Name
                    </h4>
                    <span class="mtext-106 cl2">
                        $@Model.Product.Price
                    </span>
                    <p class="stext-102 cl3 p-t-23">
                        @Model.Product.Description
                    </p>

                    <!-- Options and Add to Cart -->
                    <div class="p-t-33">
                        <!-- Size -->
                        <div class="flex-w flex-r-m p-b-10">
                            <div class="size-203 flex-c-m respon6">
                                Size
                            </div>
                            <div class="size-204 respon6-next">
                                <div class="rs1-select2 bor8 bg0">
                                    <select class="js-select2" name="size">
                                        <option>Choose size</option>
                                        <option>Size S</option>
                                        <option>Size M</option>
                                        <option>Size L</option>
                                        <option>Size XL</option>
                                    </select>
                                    <div class="dropDownSelect2"></div>
                                </div>
                            </div>
                        </div>

                        <!-- Color -->
                        <div class="flex-w flex-r-m p-b-10">
                            <div class="size-203 flex-c-m respon6">
                               Color
                            </div>
                            <div class="size-204 respon6-next">
                                <div class="rs1-select2 bor8 bg0">
                                    <select class="js-select2" name="color">
                                        <option>Choose color</option>
                                        <option>Red</option>
                                        <option>Blue</option>
                                        <option>White</option>
                                        <option>Grey</option>
                                    </select>
                                    <div class="dropDownSelect2"></div>
                                </div>
                            </div>
                        </div>

                        <!-- Quantity and Add to Cart -->
                        <div class="flex-w flex-r-m p-b-10">
                            <div class="size-204 flex-w flex-m respon6-next">
                                <div class="wrap-num-product flex-w m-r-20 m-tb-10">
                                    <div class="btn-num-product-down cl8 hov-btn3 trans-04 flex-c-m">
                                        <i class="fs-16 zmdi zmdi-minus"></i>
                                    </div>
                                    <input class="mtext-104 cl3 txt-center num-product" type="number" name="quantity" value="1" min="1">
                                    <div class="btn-num-product-up cl8 hov-btn3 trans-04 flex-c-m">
                                        <i class="fs-16 zmdi zmdi-plus"></i>
                                    </div>
                                </div>
                                <button class="flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04 js-addcart-detail">
                                    Add to cart
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Social Sharing -->
                    <div class="flex-w flex-m p-l-100 p-t-40 respon7">
                        <div class="flex-m bor9 p-r-10 m-r-11">
                            <a href="#" class="fs-14 cl3 hov-cl1 trans-04 lh-10 p-lr-5 p-tb-2 js-addwish-detail tooltip100" data-tooltip="Thêm vào danh sách yêu thích">
                                <i class="zmdi zmdi-favorite"></i>
                            </a>
                        </div>
                        <a href="#" class="fs-14 cl3 hov-cl1 trans-04 lh-10 p-lr-5 p-tb-2 m-r-8 tooltip100" data-tooltip="Facebook">
                            <i class="fa fa-facebook"></i>
                        </a>
                        <a href="#" class="fs-14 cl3 hov-cl1 trans-04 lh-10 p-lr-5 p-tb-2 m-r-8 tooltip100" data-tooltip="Twitter">
                            <i class="fa fa-twitter"></i>
                        </a>
                        <a href="#" class="fs-14 cl3 hov-cl1 trans-04 lh-10 p-lr-5 p-tb-2 m-r-8 tooltip100" data-tooltip="Google Plus">
                            <i class="fa fa-google-plus"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Reviews -->
        <div class="row p-t-50">
            <div class="col-12">
                <h4 class="mtext-102 cl2 p-b-15">Product reviews</h4>
                @if (Model.Product.Reviews == null || !Model.Product.Reviews.Any())
                {
                    <p class="stext-102 cl3">There are no reviews for this product yet.</p>
                }
                else
                {
                    foreach (var review in Model.Product.Reviews)
                    {
                        <div class="p-b-15">
                            <div class="flex-w flex-sb-m">
                                <span class="stext-102 cl3">Client</span>
                                <span class="stext-102 cl3">@review.Rating star</span>
                            </div>
                            <p class="stext-102 cl3">@review.Comment</p>
                        </div>
                    }
                }
            </div>
        </div>
    }
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

    <script>
        $(document).ready(function () 
        

            // Khởi tạo Slick slider cho hình ảnh
            $('.slick3').slick({
                dots: true,
                arrows: true,
                infinite: true,
                slidesToShow: 1,
                slidesToScroll: 1,
                customPaging: function (slider, i) {
                    var thumb = $(slider.$slides[i]).data('thumb');
                    return '<img src="' + thumb + '" class="slick3-dot-img">';
                }
            });

            // Tăng giảm số lượng
            $('.btn-num-product-up').on('click', function () {
                var input = $(this).siblings('.num-product');
                input.val(parseInt(input.val()) + 1);
            });
            $('.btn-num-product-down').on('click', function () {
                var input = $(this).siblings('.num-product');
                var value = parseInt(input.val()) - 1;
                if (value >= 1) input.val(value);
            });

            // Thêm vào giỏ hàng
            $('.js-addcart-detail').on('click', function () {
                var size = $('select[name="size"]').val();
                var color = $('select[name="color"]').val();
                var quantity = $('.num-product').val();
                var productId = @Model.Product!.ProductID;

                $.ajax({
                    url: '/api/cart/add',
                    method: 'POST',
                    data: { productId: productId, size: size, color: color, quantity: quantity },
                    success: function (response) {
                        alert('Đã thêm vào giỏ hàng!');
                    },
                    error: function () {
                        alert('Lỗi khi thêm vào giỏ hàng.');
                    }
                });
            });
        });
    </script>
}
